{
  "name": "zerberus",
  "version": "1.0.0",
  "description": "Software for a robot to chase racoons in your garden",
  "scripts": {
    "start": "concurrently -k 'npm:start-robot' 'npm:start-camera'",
    "start-robot": "sudo NODE_ENV=production npx ts-node robot | tee robot.log",
    "start-camera": "cd image_recognition && python3 use_classifier.py > ../camera.log",
    "simulator": "ts-node-dev --nolazy --watch --inspect -- robot",
    "lint": "eslint .",
    "test": "nyc --reporter=html --reporter=text mocha"
  },
  "keywords": [
    "rackoon",
    "self-driving car",
    "wild thumper",
    "robot"
  ],
  "repository": {
    "url": "https://github.com/jschirrmacher/zerberus.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^6.0.0",
    "express": "^4.17.1",
    "pigpio": "^3.2.3",
    "readline": "^1.3.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/socket.io": "^2.1.11",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "mocha": "^8.2.0",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "should": "^13.2.3",
    "ts-node-dev": "^1.0.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
